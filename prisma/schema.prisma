generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // URL do MongoDB definida no .env
}

model Usuarios {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  email String @unique
  senha String
  loja  Lojas?  @relation  // Relacionamento opcional com Loja
}

model Lojas {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  endereco  String
  usuarioId String @db.ObjectId @unique // Torna o campo usuarioId único
  usuario   Usuarios @relation(fields: [usuarioId], references: [id]) // Relacionamento com usuário
}
